<!--pages/add_product/add_product.wxml-->
<form bindsubmit="submit">
  <view style="justify-content: center;height: 150rpx;">这里该在放个什么的，但是还没想好，占位占位</view>
  <view class="up">
    <view class="upload">
      <view class="upload_1">
        <view>物品名称：</view>
        <input placeholder="请输入物品名称" name="name"> </input>
      </view>

      <view class="line"></view>

      <view class="upload_1">
        <view>物品数量：</view>
        <input placeholder="请输入物品数量" name="number"> </input>
      </view>

      <view class="line"></view>


      <view class="upload_1">
        <view>发放机ID：</view>
        <input placeholder="请输入存入的发放机ID" name="machine_id"> </input>
      </view>

      <view class="line"></view>

      <view class="upload_1">
        <view >物品数量阈值：</view>
        <input placeholder="请输入该物品数量阈值" name="threshold"> </input>
      </view>
      <view class="line"></view>

      <view class="upload_1">
        <radio-group name="type" style="padding-top: 10rpx;">
          <radio value="0">基础医疗物品</radio>
          <radio value="1" style="margin-left: 50rpx;">学生申请物品</radio>
        </radio-group>
      </view>
    </view>
  
  
  <view class="upload_detail">
    <view>商品简介</view>
    <textarea placeholder="请输入物品简介(40字)" maxlength="40" name="detail"></textarea>
  </view>


  <view class="img">
    <image src="{{img}}" style="width:100rpx;height:100rpx"></image>
    <button size="mini" type="warn" plain="true" bindtap="delete" data-id="{{index}}" data-src="{{img}}">删除图片</button>
    
    <view class="anniu">
      <button size="mini" type="primary" bindtap="upload_img" >添加图片</button>
    </view>
  </view>



</view>
<button form-type="submit" type="primary" >提交</button>
</form>
